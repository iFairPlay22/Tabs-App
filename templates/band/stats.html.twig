{% extends 'base.html.twig' %}

{% block verticallyCenter %}

    <meta name="bands_stats" content="{{ stats|json_encode }}"/>

	<div class="card">
		<div class="card-body rounded border border-primary">
			<h1 class="card-title mb-5 d-flex align-items-center">
				<ion-icon name="musical-notes-outline" class="d-sm-inline d-none mr-2"></ion-icon>
				<span>My band statistics :
					{{ band.name }}</span>
			</h1>
			
            <div id="stats_tags" class="am-chart-container"> </div>
            <div id="stats_band_evolution" class="am-chart-container"> </div>
		</div>
	</div>

{% endblock %}

{% block javascripts %}

	{{ parent() }}
	{{ encore_entry_script_tags('js/bandStatistics') }}

{% endblock %}
