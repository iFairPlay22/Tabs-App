{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block verticallyCenter %}
	<div class="col-lg-5 col-md-10 col-sm-10 col-12">
		<div class="card">
			<div class="card-body rounded border border-primary">
				<h1 class="card-title mb-5 d-flex align-items-center">
					<ion-icon name="arrow-forward-circle-outline" class="mr-2"></ion-icon>
					<span>
						Login to tabs@app!</span>
				</h1>

				<div class="form">
					{{ form_start(form) }}

					{% if app.user %}
						<div class="mb-3">
							You are logged in as
							{{ app.user.username }},
							<a href="{{ path('app_logout') }}">Logout</a>
						</div>
					{% endif %}

					{% if error %}
						<div class="alert alert-danger">
							{{ error.messageKey|trans(error.messageData, 'security') }}
						</div>
					{% endif %}

					{{ form_errors(form) }}

					{{ form_row(form.email) }}
					{{ form_row(form.password) }}

					<input
					type="hidden" name="user[_csrf_token]" value="{{ csrf_token('authenticate') }}">

					{#
					                                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
					                                See https://symfony.com/doc/current/security/remember_me.html
					
					                                <div class="checkbox mb-3">
					                                    <label>
					                                        <input type="checkbox" name="user[_remember_me]"> Remember me
					                                    </label>
					                                </div>
					                            #}

					{{ form_row(form.save) }}
					{{ form_end(form) }}
				</div>
				<div class="d-flex justify-content-end mt-2">
					<a href="{{ path('app_forgot_password_request') }}">
						I forgot my password
					</a>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
